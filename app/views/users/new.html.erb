<% provide :title, 'Bidii | Sign Up Page'   %>

<div class="main-login col-sm-4 col-sm-offset-4">
        <%=render "layouts/image"%>
        
        <!-- start: REGISTER BOX -->
        <div class="box-register">
            <h3 class="text-center">Sign Up</h3>
            <p class="text-center">
                Your account will be created in less than a minute:
            </p>
    <%= form_for :users do |f| %>
      
     
      <%= f.text_field :firstName, class: 'form-control',placeholder: 'FirstName' %><br>

      <%= f.email_field :lastName, class: 'form-control', placeholder: 'LastName' %><br>

       <%= f.password_field :email, class: 'form-control', placeholder: 'Email' %> <br>

      <%= f.password_field :password, class: 'form-control', placeholder: 'Company'%><br>

      <%= f.password_field :password, class: 'form-control', placeholder: 'Password'%><br>
      <%=render "layouts/createAcc"%>
      <%= f.submit "Create account", class: "btn btn-primary" %>

    <% end %>
        </div>
        <!-- end: REGISTER BOX -->

        <!-- start: COPYRIGHT -->
        <%= render 'layouts/account_footer' %>
        <!-- end: COPYRIGHT -->
    </div>



